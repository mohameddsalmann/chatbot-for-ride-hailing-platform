# ============================================
# SmartLine AI Chatbot V3 - Production Config
# ============================================
# IMPORTANT: Copy this to .env and fill in real values
# NEVER commit real API keys to version control

# Groq API Configuration (Required)
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration (Required)
DB_HOST=localhost
DB_USER=smartline_user
DB_PASSWORD=your_secure_db_password_here
DB_NAME=merged2
DB_POOL_SIZE=20

# Server Configuration
PORT=3001
NODE_ENV=production

# Security - REQUIRED in production (generate with: openssl rand -hex 32)
ADMIN_API_KEY=generate_a_strong_random_key_here

# Laravel Integration (for autocomplete API)
LARAVEL_BASE_URL=https://your-domain.com

# Logging
LOG_LEVEL=warn

# Optional: Rate Limiting
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=60000
